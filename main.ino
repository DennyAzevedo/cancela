void setup() {
  pinMode(dcMotor, OUTPUT);
  lcd.begin(16, 2);
}

void loop() {
  //=============================
  // lcd
  lcd.clear();
  lcd.print("Press the button");
  lcd.setCursor(0, 1);
  lcd.print("----------------");
  
  //=============================
  // speech
  while(analogRead(0) > 700) // detects when a car approaches
    delay(20);
  
  voice.say(spHELLO);
  delay(400);
  voice.say(spPLEASE);
  voice.say(spPRESS);
  voice.say(spTHE);
  voice.say(spBUTTON);

  //=============================
  // button
  while (digitalRead(button)) // receives a LOW signal when the button is pressed
    delay(20);

  //=============================
  // dc motor
  digitalWrite(dcMotor, HIGH);
  delay(1000);
  digitalWrite(dcMotor, LOW);

  //=============================
  // lcd
  lcd.clear();
  lcd.print("    Withdraw    ");
  lcd.setCursor(0, 1);
  lcd.print("   your  card   ");

  //=============================
  // speech
  voice.say(spTHANK);
  voice.say(spYOU);
    
  //=============================
  // stepper motor
  int motorSpeed = 50;
  // set the motor speed:
  myStepper.setSpeed(motorSpeed);
  // step 1/4 of a revolution (90 degrees), aka raise the barrier
  myStepper.step(stepsPerRevolution / 4);

  //=============================
  // light sensor

  while(analogRead(1) > 700)
    delay(20);

  while(analogRead(1) < 700) // detects the car leaving
    delay(20);

  // waits 3 seconds to lower the barrier
  delay(3000);
  
  myStepper.setSpeed(motorSpeed);
  myStepper.step(-stepsPerRevolution / 4);  
}
